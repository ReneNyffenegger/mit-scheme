get_release ()
{
    fgrep Release /scheme/v7/src/runtime/version.scm | awk '{ print $3 "." $4 "." $5 }' | tr -d \(\)\'
}

get_release_prefix ()
{
    echo "scheme-`get_release`"
}

get_release_tag ()
{
    echo "release-`get_release | tr . -`"
}
