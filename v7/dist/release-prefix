get_release ()
{
    fgrep Release /scheme/v7/src/runtime/version.scm \
	| awk 'BEGIN { OFS = "." }
	       NF == 5 { print $3, $4, $5 }
	       NF == 6 { print $3, $4, $5, $6 }
	       NF == 7 { print $3, $4, $5, $6, $7 }' \
	| tr -d \(\)\'\"
}

get_release_prefix ()
{
    v="${1:-$(get_release)}"
    echo "scheme-${v}"
}

get_release_tag ()
{
    v="${1:-$(get_release)}"
    echo "release-$(echo "${v}" | tr . -)"
}
