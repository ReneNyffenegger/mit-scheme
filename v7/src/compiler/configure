enable_c_back_end="no"

while test $# -gt 0; do
    case "${1}" in
    (--enable-c-back-end)
	enable_c_back_end="yes"
	shift
	;;
    (--disable-c-back-end)
	enable_c_back_end="no"
	shift
	;;
    (*)
	shift
	;;
    esac
done

if test ! -e machine; then
    if test "${enable_c_back_end}" = "yes"; then
	MACHINE="C"
    else
	case `./config.guess` in
	(alpha-* | alphaev[56]-* | alphaev56-* | alphapca56-*)
	    MACHINE="alpha"
	    ;;
	(m68k-*)
	    MACHINE="bobcat"
	    ;;
	(i[3456]86-*)
	    MACHINE="i386"
	    ;;
	(mips-* | mipsel-*)
	    MACHINE="mips"
	    ;;
	(sparc-*)
	    MACHINE="sparc"
	    ;;
	(hppa-* | hppa1.[01]-* | hppa2.?-*)
	    MACHINE="spectrum"
	    ;;
	(vax-*)
	    MACHINE="vax"
	    ;;
	(*)
	    MACHINE="C"
	    ;;
	esac
    fi
    ln -s "machines/${MACHINE}" machine
fi
for FN in compiler.cbf compiler.pkg compiler.sf make.com; do
    test -h "${FN}" || ln -s "machine/${FN}" .;
done
